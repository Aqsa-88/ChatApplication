<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:orientation="vertical"
android:background="@color/white"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="30dp"
tools:context=".Message.MainActivity">

<!-- Top Bar -->
<RelativeLayout
    android:id="@+id/topBar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:layout_marginTop="0dp"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfilePicture"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/chatapp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textSize="18dp"
        />

    <ImageView
        android:id="@+id/logoutBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/logout"
        android:contentDescription="Logout"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
<RelativeLayout
    android:layout_marginStart="10dp"
    android:layout_marginTop="7dp"
    android:layout_width="350dp"
    android:layout_height="49dp"
    android:background="@drawable/round_background_messagenav_100"

    >
    <ImageView
        android:id="@+id/search_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/outline_data_loss_prevention_24"
        android:background="@drawable/round_background_messagenav_100"
        />


</RelativeLayout>
<androidx.recyclerview.widget.RecyclerView
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/messageRecycleView"/>
</LinearLayout>


